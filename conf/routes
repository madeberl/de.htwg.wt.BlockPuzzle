# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET    /                           controllers.BlockpuzzleController.woodblock

GET    /about                      controllers.BlockpuzzleController.about

GET    /reset                       controllers.BlockpuzzleController.reset

GET    /add/:b/:x/:y                controllers.BlockpuzzleController.add(b:Int, x:Int, y:Int)

GET    /addChosen/:x/:y             controllers.BlockpuzzleController.addChosen(x:Int, y:Int)

GET    /setChoosen/:b                controllers.BlockpuzzleController.setChosen(b:Int)

GET    /g                           controllers.BlockpuzzleController.giveup

GET    /u                           controllers.BlockpuzzleController.undo


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
