# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET    /                           controllers.BlockpuzzleController.blockpuzzle

GET    /about                      controllers.BlockpuzzleController.about

GET    /reset                      controllers.BlockpuzzleController.reset

GET    /add/:b/:x/:y               controllers.BlockpuzzleController.add(b:Int, x:Int, y:Int)

GET    /addChoosen/:x/:y           controllers.BlockpuzzleController.addChosen(x:Int, y:Int)

GET    /setChoosen/:b              controllers.BlockpuzzleController.setChosen(b:Int)

GET    /giveup                     controllers.BlockpuzzleController.giveup

GET    /undo                       controllers.BlockpuzzleController.undo

GET    /json                       controllers.BlockpuzzleController.loadJason

GET     /websocket                  controllers.BlockpuzzleController.websocket

GET     /polymer                    controllers.BlockpuzzleController.blockpuzzlepolymer

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
