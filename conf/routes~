# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET     /                           controllers.BlockpuzzleController.woodblock

GET     /about                      controllers.BlockpuzzleController.about

GET    /r                       controllers.BlockpuzzleController.reset

GET    /add/:b/:x/:y                controllers.BlockpuzzleController.add(b:Int, x:Int, y:Int)

GET    /g                           controllers.BlockpuzzleController.giveup

GET    /u                           controllers.BlockpuzzleController.reverse


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
